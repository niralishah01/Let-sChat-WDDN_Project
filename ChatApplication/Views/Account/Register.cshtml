@model ChatApplication.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}


    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ChatApplication</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <!-- For ICONS -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <style>
            .centered {
                position:absolute;
                top: 5%;
                left: 27%;
            }
        </style>
    </head>
        <img src="~/images/background_chat1.jpg" class="img-responsive" style="width: 100%;
            background-position: center;
            background-repeat:no-repeat;
            background-attachment:fixed;
            background-size:cover;
            background-color:aquamarine;
            " />
        <div class="container">
            <div class="bg-white centered p-2 w-50 rounded shadow-lg ">
                <div class="row">
                    <div class="col-lg-12">
                        <center>
                            <h1 style="font-size: 2vw;"><i class="fas fa-comment fa-3x" style="color: #00BFFF;"></i></h1>
                            <h2 class="text-dark" style="font-size: 2vw;">User Registration</h2>
                        </center>
                    </div>
                </div>
                <form method="post" class="mt-3">
                    <div class="form-group row">
                        <div class="col-lg-2">
                            <label asp-for="UserName" class="col-sm-2 col-form-label" style="font-size:1.2vw;"></label>
                        </div>
                        <div class="col-lg-10">
                            <input asp-for="UserName" class="form-control"style="font-size:1.2vw;" placeholder="Enter Username">
                            <span asp-validation-for="UserName" class="text-danger" style="font-size:1vw"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-2">
                            <label asp-for="Email" class="col-sm-2 col-form-label" style="font-size:1.2vw;"></label>
                        </div>
                        <div class="col-lg-10">
                            <input asp-for="Email" class="form-control" style="font-size:1.2vw;" placeholder="Enter your Email">
                            <span asp-validation-for="Email" class="text-danger" style="font-size:1vw"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-2">
                            <label asp-for="MobileNo" class="col-sm-2 col-form-label" style="font-size:1.2vw;"></label>
                        </div>
                        <div class="col-lg-10">
                            <input asp-for="MobileNo" class="form-control" style="font-size:1.2vw;" placeholder="Enter your Mobileno">
                            <span asp-validation-for="MobileNo" class="text-danger" style="font-size:1vw"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-2">
                            <label asp-for="PassWord" class="col-sm-2 col-form-label" style="font-size:1.2vw;"></label>
                        </div>
                        <div class="col-lg-10">
                            <input asp-for="PassWord" class="form-control" style="font-size:1.2vw;" placeholder="Enter the Password">
                            <span asp-validation-for="PassWord" class="text-danger" style="font-size:1vw"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-2">
                            <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label" style="font-size:1.2vw;"></label>
                        </div>
                        <div class="col-lg-10">
                            <input asp-for="ConfirmPassword" class="form-control" style="font-size:1.2vw;" placeholder="Re enterthe password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size:1vw"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger" style="font-size:1vw"></div>
                    <div class="form-group row">
                        <div class="col-lg-10">
                            <button type="submit" class="btn btn-success">Sign-Up</button>
                        </div>
                    </div>
                </form>
                <div class="row p-2">
                    <div class="col-lg-12">
                        <center>
                            <span>
                                <a class="btn btn-link text-danger" style="font-size: 1vw;" asp-controller="Account" asp-action="Login">Already registered user? </a>
                            </span>
                        </center>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <center>
                            <span>
                                <a class="btn btn-primary text-white" style="font-size: 1vw;" asp-controller="Home" asp-action="Index">Go back to Home</a>
                            </span>
                        </center>
                    </div>
                </div>
            </div>
        </div>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>

 