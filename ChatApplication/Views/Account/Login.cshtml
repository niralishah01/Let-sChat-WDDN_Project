@model ChatApplication.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
    <style>
        .centered {
            position: absolute;
            top: 14%;
            left: 38%;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- For ICONS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<img src="~/images/background_chat1.jpg" class="img-responsive" style="width: 100%;
            background-position: center;
            background-repeat:no-repeat;
            background-attachment:fixed;
            background-size:cover;
            background-color:aquamarine;
            " />
<div class="container">
    <div class="bg-white centered p-3 w-25 rounded shadow-lg ">
        <div class="row">
            <div class="col-lg-12">
                <center>
                    <h1 style="font-size: 2vw;"><i class="fas fa-comment fa-3x" style="color: #00BFFF;"></i></h1>
                    <h2 class="text-dark" style="font-size: 2vw;">Login</h2>
                </center>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger" style="font-size:0.9vw"></div>
        <form method="post">
            <div class="row p-2">
                <div class="col-lg-12">
                    <input type="text" style="font-size: 1.2vw;" class="form-control p-2" asp-for="UserName" placeholder="Enter your username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="row p-2">
                <div class="col-lg-12">
                    <input type="password" style="font-size: 1.2vw;" class="form-control p-2" asp-for="PassWord" placeholder="Enter your password" />
                    <span asp-validation-for="PassWord" class="text-danger"></span>
                </div>
            </div>
            <div class="row p-2">
                <div class="col-lg-12">
                    <div class="checkbox" style="font-size: 1vw;">
                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(x => x.RememberMe)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <input type="submit" style="font-size: 1.2vw;" class="form-control btn btn-success p-2" value="Login" />
                </div>
            </div>
        </form>
        <div class="row p-2">
            <div class="col-lg-12">
                <center>
                    <span>
                        <a class="btn btn-link text-danger" style="font-size: 1vw;" asp-controller="Account" asp-action="Register">Not yet registered ?</a>
                    </span>
                </center>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <center>
                    <span>
                        <a class="btn btn-primary text-white" style="font-size: 1vw;" asp-controller="Home" asp-action="Index">Go back to Home</a>
                    </span>
                </center>
            </div>
        </div>
    </div>
</div>
